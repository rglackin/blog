<%=form_with model: [@article, @article.comments.build] do |form|%>

<p>
    <%= form.label :body%><br>
    <%= form.text_field :body, class: "block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
</p>
<p>
    <%= form.label :status%><br>
    <%= form.select :status, Visible::VALID_STATUSES, selected: 'public'%>
</p>
<p>
    <%= form.submit "Submit", class: "flex justify-center rounded-md bg-blue-600 mt-2 px-1 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
</p>
<% end %>