<div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold underline mb-4">Articles</h1>
    <% unless @articles.empty? %>
        <p>Showing <%= @articles.count %> articles</p>
    <% else %>
        <p>Our blog has <%= @articles.count %> articles :(</p>
    <% end %>

    <ul class="list-disc pl-5">
        <% @articles.each do |article| %>
            <li class="mt-2">
                <%= link_to article.title, article, class: "text-blue-500 hover:text-blue-600" %>
                <% if article.archived? %><span class="text-gray-500">(Archived)</span><% end %>
                <% if article.private? %><span class="text-gray-500">(Private)</span><% end %>
            </li>
        <% end %>
    </ul>

    <%== pagy_nav(@pagy) %>

    <%= link_to "New Article", new_article_path, class: "mt-4 inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>

    <ul class="list-none mt-4">
        <% if current_user %>
            <li><%= link_to "Sign Out", destroy_user_session_path, class: "text-red-500 hover:text-red-600", data:{
        turbo_method: :delete} %></li>
        <% else %>
            <li><%= link_to "Sign In", new_user_session_path, class: "text-blue-500 hover:text-blue-600" %></li>
            <li><%= link_to "Sign Up", new_user_registration_path, class: "text-blue-500 hover:text-blue-600" %></li>
        <% end %>
    </ul>
</div>