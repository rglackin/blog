<%= form_with model: article do |form| %>
<div>
    <%= form.label :title, class: "block text-sm font-medium leading-6 text-gray-900"%><br>
    <%= form.text_field :title,class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
    <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :body ,class: "block text-sm font-medium leading-6 text-gray-900"%><br>
    <%= form.text_area :body,class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
    <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>
<div>
    <%= form.label :status, class: "block text-sm font-medium leading-6 text-gray-900"%><br>
    <%= form.select :status, Visible::VALID_STATUSES,class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", selected: article.status|| 'public'%>
</div>
 
<div class="mt-2">
    <%= form.submit "Submit",class: "flex w-full justify-center rounded-md bg-indigo-600 px-3  py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
</div>
<% end %>