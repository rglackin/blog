<% unless @articles.empty? %>
  <div class="grid gap-8 lg:grid-cols-2">
    <% articles.each do |article| %>
      <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
        <div class="flex justify-between items-center mb-5 text-gray-500">
          <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800">
            Article
          </span>
          <span class="text-sm"><%= time_ago_in_words(article.created_at) %> ago 
            <% if article.archived? %>(Archived)<% end %>
            <% if article.private? %>(Private)<% end %>
          </span>
        </div>
        <%=link_to  article.title, article_path(article),class:"mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"%>
        <p class="mb-5 font-light text-gray-500 dark:text-gray-400">
          <%= truncate(article.body, length:100, omission: '...')%>
        </p>
        <div class="flex justify-between items-center">
          <div class="flex items-center space-x-4">
            <span class="font-medium dark:text-white">
              By <%= article.user.name.capitalize%>
            </span>
          </div>
          <%= link_to article ,class:"inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline" do%>
            Read More
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
          <%end%>
        </div>
      </article>
    <%end%>
  </div>
  <p>Showing <%= @articles.count %> out of <%= @total_articles%> articles </p>
  <div class="my-4">
    <%== pagy_nav(@pagy) %>
  </div>
<%else%>
  <p class="text-center text-gray-500 dark:text-gray-400 text-xl">No articles found</p>
<%end%>